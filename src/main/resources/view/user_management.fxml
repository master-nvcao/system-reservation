<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.my.project.controller.UserManagementController"
            stylesheets="@/style/styles.css"
            prefWidth="750" prefHeight="520">

    <top>
        <VBox spacing="10" styleClass="padded-vbox">
            <Label text="Gestion des utilisateurs"
                   styleClass="header-label"
                   BorderPane.alignment="CENTER"/>
        </VBox>
    </top>

    <center>
        <TableView fx:id="userTable" prefHeight="420" prefWidth="700" styleClass="table-view">
            <columns>
                <TableColumn fx:id="idCol" text="ID" prefWidth="50"/>
                <TableColumn fx:id="nomCol" text="Nom" prefWidth="180"/>
                <TableColumn fx:id="emailCol" text="Email" prefWidth="250"/>
                <TableColumn fx:id="roleCol" text="Rôle" prefWidth="150"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox spacing="12" alignment="CENTER" styleClass="bottom-buttons">
            <Button text="Ajouter" onAction="#handleAdd" styleClass="primary-button"/>
            <Button text="Modifier" onAction="#handleEdit" styleClass="secondary-button"/>
            <Button text="Supprimer" onAction="#handleDelete" styleClass="danger-button"/>
            <Button text="Réinitialiser mot de passe" onAction="#handleResetPassword" styleClass="secondary-button"/>
            <Button text="Fermer" onAction="#handleClose" styleClass="secondary-button"/>
        </HBox>
    </bottom>

</BorderPane>
