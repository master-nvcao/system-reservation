<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.my.project.controller.AllReservationsController"
            stylesheets="@/style/styles.css"
            prefWidth="1000" prefHeight="600"
            styleClass="dashboard-root">

    <top>
        <VBox spacing="15" styleClass="padded-vbox">
            <Label text="Toutes les Réservations" styleClass="header-label"/>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Salle :" styleClass="filter-label"/>
                <TextField fx:id="salleFilter" promptText="Nom de salle" styleClass="input-text"/>

                <Label text="Utilisateur :" styleClass="filter-label"/>
                <TextField fx:id="userFilter" promptText="Email utilisateur" styleClass="input-text"/>

                <Label text="Date :" styleClass="filter-label"/>
                <DatePicker fx:id="dateFilter" styleClass="input-date"/>

                <Button text="Filtrer" onAction="#handleFiltrer" styleClass="primary-button"/>
                <Button text="Exporter" onAction="#handleExporter" styleClass="secondary-button"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="reservationTable" prefHeight="450" styleClass="styled-table">
            <columns>
                <TableColumn fx:id="salleCol" text="Salle" prefWidth="150"/>
                <TableColumn fx:id="userCol" text="Utilisateur" prefWidth="150"/>
                <TableColumn fx:id="dateDebutCol" text="Date Début" prefWidth="200"/>
                <TableColumn fx:id="dateFinCol" text="Date Fin" prefWidth="200"/>
                <TableColumn fx:id="descCol" text="Description" prefWidth="250"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20" styleClass="action-bar">
            <Button text="Modifier" onAction="#handleModifier" styleClass="primary-button"/>
            <Button text="Supprimer" onAction="#handleSupprimer" styleClass="danger-button"/>
            <Button text="Fermer" onAction="#handleFermer" styleClass="secondary-button"/>
        </HBox>
    </bottom>
</BorderPane>
